  gofmt:
    rewrite-rules:
      - pattern: 'interface{}'
        replacement: 'any'
  custom:
    logcheck:
      path: <<LOGCHECK_PLUGIN_PATH>>/logcheck.so
      description: Check structured logging calls to logr.Logger instances
      original-url: github.com/gardener/gardener/hack/tools/logcheck
