apiVersion: seedmanagement.gardener.cloud/v1alpha1
kind: Gardenlet
metadata:
  name: remote
  namespace: garden
spec:
  deployment:
    helm:
      ociRepository:
        pullSecretRef:
          name: gardener-images
  config:
    seedConfig:
      spec:
        # Specify all fields when defining 'backup' so that they correctly overwrite the corresponding fields in example/gardener-local/gardenlet/values.yaml
        backup: ~
        provider:
          # This field will be automatically set by `make remote-up` when using a Gardener shoot.
          region: ""
          # This field will be automatically set by `make remote-up` when using a Gardener shoot.
          type: ""
          # Enter zones of your seed
          zones: []
        dns:
          provider:
            # Automatically set
            credentialsRef:
              apiVersion: ""
              kind: ""
              name: ""
              namespace: ""
            # Automatically set
            type: ""
          internal:
            # Automatically set
            credentialsRef:
              apiVersion: ""
              kind: ""
              name: ""
              namespace: ""
            # Automatically set
            type: ""
            # Enter the internal domain of your seed
            domain: ""
            # Enter the zone of the internal domain of your seed
            zone: ""
          defaults:
          # Automatically set
          - credentialsRef:
              apiVersion: ""
              kind: ""
              name: ""
              namespace: ""
            # Automatically set
            type: ""
            # Enter default domain of your seed
            domain: ""
            # Enter the zone of the default domain of your seed
            zone: ""
        # Specify extensions if you want to use any
        extensions: ~
        ingress:
          controller:
            kind: nginx
          # Enter ingress domain of your seed
          domain: ""
        networks:
          blockCIDRs:
            - 169.254.169.254/32
          # This field will be automatically set by `make remote-up` when using a Gardener shoot.
          pods: ""
          # This field will be automatically set by `make remote-up` when using a Gardener shoot.
          nodes: ""
          # This field will be automatically set by `make remote-up` when using a Gardener shoot.
          services: ""
          shootDefaults:
            pods: 100.80.0.0/12
            services: 100.112.0.0/13
        settings:
          dependencyWatchdog:
            endpoint:
              enabled: true
            probe:
              enabled: true
          excessCapacityReservation:
            enabled: false
          scheduling:
            visible: true
          verticalPodAutoscaler:
            # If using a Gardener shoot, make sure that the shoot cluster has VPA enabled. Otherwise, enable VPA below in the seed spec.
            # Don't enable VPA for both the shoot control plane and the seed. 2 VPA deployments acting on the same cluster cause endless VPA eviction loops.
            enabled: false
